<html>
<head><title>Hello World</title></head>
<body>
<p>

<!-- The var ${time} will be substituted for the correspondingly named render parameter -->

<perl method="hello">
Hello World ${time}
</perl>

</body>
</html>

__PERL__

sub hello { 
	my $self=shift();
	my $time=scalar localtime;
	$self->render( time=>$time );
}
